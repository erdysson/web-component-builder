{
  "name": "web-component-builder",
  "version": "1.0.0",
  "description": "Web Component Builder with typescript decorators",
  "author": "Erdi Taner Goekalp",
  "keywords": [
    "typescript",
    "javascript",
    "web components",
    "webpack"
  ],
  "engines": {
    "node": ">=12"
  },
  "license": "ISC",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "typings": "dist/main/index.d.ts",
  "files": [
    "dist/main",
    "dist/module",
    "package.json",
    "README.md"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "fix": "run-s fix:*",
    "tsc:build:main": "tsc -p tsconfig.json",
    "tsc:build:module": "tsc -p tsconfig.module.json",
    "tsc:build": "run-p tsc:build:*",
    "rollup:bundle:main": "rollup -c rollup.config.ts",
    "rollup:bundle:module": "rollup -c rollup.config.module.ts",
    "rollup:bundle": "run-p rollup:bundle:*",
    "serve": "static-server dist"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "core-js": "^3.9.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/rollup-plugin-json": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rollup": "^2.44.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}
