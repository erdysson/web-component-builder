{
  "name": "web-component-builder",
  "version": "1.0.0-rc.3",
  "description": "Web Component Builder with typescript decorators",
  "author": "Erdi Taner Goekalp",
  "keywords": [
    "typescript",
    "javascript",
    "web components",
    "webpack"
  ],
  "engines": {
    "node": ">=12"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erdysson/web-component-builder.git"
  },
  "main": "dist/main.js",
  "module": "dist/module.js",
  "typings": "dist/main/index.d.ts",
  "files": [
    "dist/main",
    "dist/main.css",
    "dist/main.js",
    "dist/main.js.map",
    "LICENSE",
    "README.md"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "fix": "run-s fix:*",
    "tsc:build:main": "tsc -p tsconfig.json",
    "tsc:build:module": "tsc -p tsconfig.module.json",
    "tsc:build": "run-p tsc:build:*",
    "rollup:bundle:main": "rollup -c rollup.config.ts",
    "rollup:bundle:module": "rollup -c rollup.config.module.ts",
    "rollup:bundle": "run-p rollup:bundle:*",
    "lib:build:main": "npm run tsc:build:main && npm run rollup:bundle:main",
    "lib:build:module": "npm run tsc:build:module && npm run rollup:bundle:module",
    "lib:build": "npm run tsc:build && npm run rollup:bundle",
    "release": "release-it"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "core-js": "^3.10.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/core": "^7.13.13",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/runtime": "^7.13.10",
    "@rollup/plugin-babel": "^5.3.0",
    "@types/node": "^14.14.37",
    "@types/rollup-plugin-json": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "release-it": "^14.6.0",
    "rollup": "^2.45.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-scss": "^2.6.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.30.0",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "release-it": {
    "preReleaseId": "rc",
    "hooks": {
      "after:bump": "npm run lib:build:main"
    },
    "git": {
      "requireCleanWorkingDir": true,
      "commitMessage": "Release web-component-builder ${version}",
      "commitArgs": "--no-verify",
      "pushArgs": "--no-verify",
      "tag": false
    },
    "npm": {
      "publish": true
    }
  }
}
