{
  "name": "web-component-builder",
  "version": "1.0.0-rc.6",
  "description": "Web Component Builder with typescript decorators",
  "author": "Erdi Taner Goekalp",
  "keywords": [
    "typescript",
    "javascript",
    "web components",
    "webpack"
  ],
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erdysson/web-component-builder.git"
  },
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "lint": "cd src && eslint . --ext .ts",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "npm run lint -- --fix",
    "fix": "run-s fix:*",
    "lib:test": "mocha",
    "lib:coverage": "nyc npm run lib:test",
    "tsc:build": "tsc -p src/tsconfig.json",
    "rollup:bundle": "rollup -c rollup.config.js",
    "lib:build": "npm run lint && npm run tsc:build && npm run rollup:bundle"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.37",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chai": "^4.3.4",
    "eslint": "^7.23.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "mocha": "^8.3.2",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "rollup": "^2.45.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  }
}
