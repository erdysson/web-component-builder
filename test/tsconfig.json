{
    "compilerOptions": {
        "incremental": false,
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["ESNext", "DOM"],
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "skipLibCheck": true
    },
    "references": [
        {
            "path": "../src"
        }
    ],
    "include": [
        "./**/*.spec.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
