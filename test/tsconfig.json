{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "outDir": "../lib",
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": ["jasmine"],
        "typeRoots": ["../node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "pretty": true,
        "skipLibCheck": true
    },
    "references": [
        {
            "path": "../src"
        }
    ],
    "exclude": [
        "**/node_modules/**"
    ]
}
